{% extends "::base.html.twig" %}
{% block sidebar %}
<br>
<a href ="{{path('Home')}}">Home</a>  <br>
<a href ="{{path('UserView', {userid: user.id})}}">My Account</a> <br>
<a href ="{{path('NewCourse')}}">Add Course</a> <br>
<a href ="{{path('CourseIndex')}}">Course Index</a>
{% endblock %}
{% block body %}
<h3>View Course: {{course.name}}</h3>
<table class="table">
    <tr>
        <th>Course Number</th>
        <th>Name</th>
        <th>Faculty</th>
        <th>Department</th>
		<th>Creator</th>
		<th>Follower</th>
    </tr>
    <tr>
        <td>{{ course.coursenumber }}</td>
        <td>{{ course.name }}</td>
        <td>{% for faculty in course.faculty %} {{ faculty.FullName}} <br> {% endfor %}</td> 
        <td>{{ course.department }}</td>
		<td>{{ course.creator }}</td>
		<td>{% for foll in  course.follower  %} {{ foll}} <br> {% endfor %}</td>
    </tr>   
</table>
<h4>Assignments</h4>
<table class="table">
    {% for assignment in course.assignments %}
    <tr>
        <td>{{assignment.name}}</td>
        <td>{{assignment.briefdescription}}</td>
    </tr>
    {% endfor %}
</table>
{% endblock %}
