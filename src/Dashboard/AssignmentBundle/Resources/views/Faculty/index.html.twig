{% extends "::base.html.twig" %}
{% block sidebar %}
<br>
<a href ="{{path('Home')}}">Home</a> <br>
<a href ="{{path('UserView', {userid: user.id})}}">My Account</a> <br>
<a href ="{{path('NewFaculty')}}">Add Faculty Member</a>
{% endblock %}
{% block body %}
<h3>Faculty Index</h3>
<table class ="table">
    <tr>
        <th>Title</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Department</th>
    </tr>
{% for faculty in faculty %}
    <tr>
        <td>{{faculty.title}}</td> 
        <td>{{ faculty.firstName }}</td> 
        <td>{{ faculty.LastName}}</td> 
        <td>{{faculty.department}}</td>
        <td><a href="{{ path('DeleteFaculty', {'facultyid' : faculty.id}) }}">Delete</a></td>
    </tr>
{% endfor %}
</table>
{% endblock %}
