{% extends "::base.html.twig" %}
{% block sidebar %}
	<br>
	<a href ="{{path('Home')}}">Home</a> <br>
	<a href ="{{path('UserView', {userid: user.id})}}">My Account</a> <br>
	<a href ="{{path('newAssignment')}}">Add Assignment</a> <br>
	<a href ="{{path('AssignmentIndex')}}">Assignment Index</a>
{% endblock %}
{% block body %}
<h3>View Assignment: {{ assignment.name}}</h3>
<table class="table">
    <tr>
		<th>Assignment Name</th>
		<th>Brief Description</th>
		<th>Course</th>
		<th>Technology Tools</th>
		<th>Technology Category</th>
		<th>Project URL</th>
    </tr>
    <tr>
		<td>{{ assignment.name }}</td>
		<td>{{ assignment.BriefDescription }}</td>
		<td>{{ assignment.course.name}}</td>
		<td>{% for TechTools in assignment.TechnologyTools %} {{ TechTools.name }} <br> {% endfor %}</td>
		<td>{% for TechCatory in assignment.TechnologyCategory %} {{ TechCatory.name }} <br> {% endfor %}</td>
		<td>{{ assignment.ProjectURL }}</td>
    </tr>   
</table>

{% endblock %}
